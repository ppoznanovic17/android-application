<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/input_fragment"
        android:name="com.marko_cvijanovic.project.view.InputFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#EDCA60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/info_fragment"
        app:layout_constraintVertical_weight=".4"
        />

    <fragment
        android:id="@+id/info_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:name="com.marko_cvijanovic.project.view.InfoFragment"
        app:layout_constraintVertical_weight=".6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/input_fragment" />
</androidx.constraintlayout.widget.ConstraintLayout>