<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:background="#EFE694"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_edittext_edit"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Car Name"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/price_edittext_edit"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/car_edittext_edit"
        android:hint="Rent per day"
        android:inputType="number"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/licence_edittext_edit"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/price_edittext_edit"
        android:hint="Licence Tag"
        />

    <Button
        android:id="@+id/edit_button_edit"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/licence_edittext_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/cancel_button_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/licence_edittext_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/edit_button_edit"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="199dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

